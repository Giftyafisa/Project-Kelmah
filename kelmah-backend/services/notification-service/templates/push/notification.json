{
  "title": "{{ title }}",
  "body": "{{ content }}",
  "icon": "{{ icon }}",
  "badge": "{{ badge }}",
  "tag": "{{ type }}",
  "data": {
    "url": "{{ actionUrl }}",
    "type": "{{ type }}",
    "relatedId": "{{ relatedId }}",
    "timestamp": "{{ timestamp }}"
  },
  "actions": [
    {{#if actionText}}
    {
      "action": "view",
      "title": "{{ actionText }}"
    }
    {{/if}}
    {{#if secondaryActionText}}
    {{#if actionText}},{{/if}}
    {
      "action": "secondary",
      "title": "{{ secondaryActionText }}"
    }
    {{/if}}
  ]
} 